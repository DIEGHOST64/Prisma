# ========================
# CONFIGURACIÓN GENERAL
# ========================
APP_ENV=production
APP_DEBUG=false
NODE_ENV=production
ENVIRONMENT=production

# ========================
# JWT SECURITY
# ========================
# Generar con: openssl rand -base64 32
JWT_SECRET=CAMBIAR_POR_SECRETO_SEGURO_DE_32_CARACTERES
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ========================
# AWS CREDENTIALS
# ========================
AWS_ACCESS_KEY_ID=TU_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=TU_AWS_SECRET_KEY
AWS_REGION=us-east-1
SES_FROM_EMAIL=tu_email_verificado@example.com
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/TU_ACCOUNT/email-queue

# ========================
# BASES DE DATOS
# ========================

# Recruitment Service Database
RECRUITMENT_DB_USER=postgres
RECRUITMENT_DB_PASSWORD=CAMBIAR_PASSWORD_SEGURO_1

# Auth Service Database
AUTH_DB_USER=postgres
AUTH_DB_PASSWORD=CAMBIAR_PASSWORD_SEGURO_2

# Document Service Database
DOCUMENT_DB_USER=postgres
DOCUMENT_DB_PASSWORD=CAMBIAR_PASSWORD_SEGURO_3

# ========================
# FRONTEND URLS (PRODUCCIÓN)
# ========================
VITE_API_URL=http://TU_IP_PUBLICA_O_DOMINIO
VITE_RECRUITMENT_API=http://TU_IP_PUBLICA_O_DOMINIO:3002
VITE_AUTH_API=http://TU_IP_PUBLICA_O_DOMINIO:3001
VITE_DOCUMENT_API=http://TU_IP_PUBLICA_O_DOMINIO:3003

# ========================
# DOCUMENT SERVICE
# ========================
MAX_FILE_SIZE=10485760
