{
    "name": "prisma/recruitment-service",
    "description": "Recruitment Service - Clean Architecture with Slim Framework",
    "type": "project",
    "require": {
        "php": "^8.2",
        "aws/aws-sdk-php": "^3.359",
        "firebase/php-jwt": "^6.10",
        "monolog/monolog": "^3.5",
        "php-di/php-di": "^7.0",
        "ramsey/uuid": "^4.7",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.12",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "Prisma\\Recruitment\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "scripts": {
        "start": "php -S localhost:3002 -t public",
        "test": "phpunit",
        "analyze": "phpstan analyse src --level=5"
    }
}
